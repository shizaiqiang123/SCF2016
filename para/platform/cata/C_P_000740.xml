<?xml version="1.0" encoding="UTF-8"?>
<catalog>
	<id>C_P_000740</id>
	<name>买方保理池-融资申请</name>
	<MODULE>SYST</MODULE>
	<jspfile>screen/catalog.jsp</jspfile>
	<DESC>买方保理池-融资申请</DESC>
	<tablename>TRX.CNTRCT_M a,TRX.LMT_M b</tablename>
	<search>
		<field datatype="1" title="协议编号" defaultvalue="" width = "200">cntrctNo</field>
		<field datatype="1" title="核心企业名称" defaultvalue="" width = "200">buyerNm</field>
	</search>
	<select>
		<field datatype="1" checkbox = "true"></field>
		<field datatype="1" title="协议编号" hidden="" width = "20%" alis = "cntrctNo">a.cntrct_No</field>
		<field datatype="1" title="组织机构代码" hidden="" width = "20%" alis = "sellerInstCd">a.seller_Inst_Cd</field>
		<field datatype="1" title="核心企业名称" hidden="" width = "20%" alis = "buyerNm">a.buyer_Nm</field>
		<field datatype="1" title="业务类别" hidden="" width = "20%" formatter="busiTypeFormater" alis = "busiTp">a.busi_Tp</field>
		<field datatype="1" title="币种" hidden="" width = "20%" formatter="ccyFormater" alis = "lmtCcy">a.lmt_Ccy</field>
		<field datatype="1" title="协议流水号" hidden="true" width = "25%" alis = "sysRefNo">a.sys_Ref_No</field>
		<field datatype="1" title="融资比例" hidden="true" width = "25%" alis = "loanPct">a.loan_Pct</field>
		<field datatype="1" title="融资费率" hidden="true" width = "25%" alis = "finChgrt">a.fin_Chgrt</field>
		<field datatype="1" title="融资利率" hidden="true" width = "25%" alis = "loanRt">a.loan_Rt</field>
		<field datatype="1" title="应付账款可融资额" hidden="true" width = "25%" alis = "arAvalLoan">a.ar_Aval_Loan</field>
		<field datatype="1" title="扣息方式" hidden="true" width = "25%" alis = "payIntTp">a.pay_Int_Tp</field>
		<field datatype="1" title="占用额度" hidden="true" width = "25%" alis = "ttlAllocate">b.ttl_Allocate</field>
		<field datatype="1" title="额度金额" hidden="true" width = "25%" alis = "lmtAmt">b.lmt_Amt</field>
		<field datatype="1" title="额度余额" hidden="true" width = "25%" alis = "lmtBal">b.lmt_Bal</field>
		<field datatype="1" title="转让费率" hidden="true" width = "25%" alis = "transChgrt">a.trans_Chgrt</field>
	    <field datatype="1" title="额度流水号" hidden="true" width = "25%" alis = "lmtSysRefNo">b.sys_Ref_No</field>
	    <field datatype="1" title="授信客户编号" hidden="true" width = "25%" alis = "selId">a.sel_Id</field>
	    <field datatype="1" title="协议下融资余额" hidden="true" width = "15%" formatter="ccyFormater"  alis = "openLoanAmt">a.open_Loan_Amt</field>
	    
	    <field datatype="1" title="原始Function" hidden="true" width = "" formatter="ccyFormater" alis = "arBal">a.ar_Bal</field>
		<field datatype="1" title="原始Function" hidden="true" width = "" formatter="ccyFormater" alis = "lmtAllocate">a.lmt_Allocate</field>
		<field datatype="1" title="原始Function" hidden="true" width = "" formatter="ccyFormater" alis = "lmtRecover">a.lmt_Recover</field>
		<field datatype="1" title="原始Function" hidden="true" width = "" formatter="ccyFormater" alis = "loanPerc">a.loan_Perc</field>
		<field datatype="1" title="原始Function" hidden="true" width = "" formatter="ccyFormater" alis = "billAmt">a.bill_Amt</field>
		<field datatype="1" title="原始Function" hidden="true" width = "" formatter="ccyFormater" alis = "initGartPct">a.init_Gart_Pct</field>
		<field datatype="1" title="原始Function" hidden="true" width = "" formatter="ccyFormater" alis = "pldPerc">a.pld_Perc</field>
		<field datatype="1" title="原始Function" hidden="true" width = "" formatter="ccyFormater" alis = "poolLine">a.pool_Line</field> 
		
		
	</select>
	<join>
		<on seq="1">a.sys_Ref_No = b.cntrct_No</on>
	</join>
	<condition><![CDATA[a.cntrct_No like '%$cntrctNo$%' and a.buyer_Nm like '%$buyerNm$%' and b.sys_Trx_Sts = 'M' and b.sys_Lock_Flag = 'F' and b.lmt_Due_Dt >= to_date('$sysCurrentDate$','yyyy-MM-dd') and b.lmt_Valid_Dt <= to_date('$sysCurrentDate$','yyyy-MM-dd') and a.busi_Tp = '9' and b.lmt_Sts = '0' and b.lmt_Tp = '0' and a.sys_Org_Id = $sysOrgId$ and b.sys_Org_Id = $sysOrgId$]]></condition>
	<orderby>a.sys_Ref_No</orderby>
</catalog>
